<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip" >

        <TextView
            android:id="@+id/info_user_name"
            style="@style/add_edit_transaction_style"
            android:text="@string/Name" />

        <EditText
            android:id="@+id/info_user_name_box"
            style="@style/add_edit_transaction_edit_text_style"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip" >

        <TextView
            android:id="@+id/info_email"
            style="@style/add_edit_transaction_style"
            android:text="Email:" />

        <EditText
            android:id="@+id/info_email_box"
            style="@style/add_edit_transaction_edit_text_style" 
            android:inputType="textEmailAddress"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip" >

        <TextView
            android:id="@+id/info_password"
            style="@style/add_edit_transaction_style"
            android:text="Password:" />

        <EditText
            android:id="@+id/info_password_box"
            style="@style/add_edit_transaction_edit_text_style"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:weightSum="10" >

        <Button
            android:id="@+id/info_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Save" />

        <Button
            android:id="@+id/info_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout>