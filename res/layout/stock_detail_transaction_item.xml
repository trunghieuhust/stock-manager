<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="?actionBarItemBackground"
    android:orientation="horizontal"
    android:paddingBottom="5dip"
    android:paddingLeft="4dip"
    android:paddingRight="4dip"
    android:weightSum="10" >

    <TextView
        android:id="@+id/stock_detail_transaction_item_date"
        style="@style/transaction_list_detail_style"
        android:layout_weight="2.5"
        android:gravity="center_horizontal"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/stock_detail_transaction_item_price"
        style="@style/transaction_list_detail_style"
        android:layout_weight="2.5"
        android:gravity="center_horizontal"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/stock_detail_transaction_item_shares"
        style="@style/transaction_list_detail_style"
        android:layout_weight="2.5"
        android:gravity="center_horizontal"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/stock_detail_transaction_item_profit"
        style="@style/transaction_list_detail_style"
        android:layout_weight="2.5"
        android:gravity="center_horizontal"
        android:textIsSelectable="false" />

</LinearLayout>