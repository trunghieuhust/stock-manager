<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/overview_user_header"
            style="@style/overview_header_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Information" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip" >

            <TextView
                android:id="@+id/overview_name"
                style="@style/over_view_style"
                android:text="@string/Name" />

            <TextView
                android:id="@+id/overview_name_detail"
                style="@style/over_view_detail_style"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/overview_email"
                style="@style/over_view_style"
                android:text="Email:" />

            <TextView
                android:id="@+id/overview_email_detail"
                style="@style/over_view_detail_style"
                android:text="" />
        </LinearLayout>

        <TextView
            android:id="@+id/overview_cash_header"
            style="@style/overview_header_label"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Cash Overview" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

            <TextView
                android:id="@+id/overview_cash_balance"
                style="@style/over_view_style"
                android:layout_weight="2"
                android:gravity="left"
                android:text="Cash Balance:" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="" />

            <TextView
                android:id="@+id/overview_cash_balance_detail"
                style="@style/over_view_detail_style"
                android:layout_gravity="right"
                android:layout_weight="2"
                android:gravity="right"
                android:text="0$"
                android:textIsSelectable="false" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

            <TextView
                android:id="@+id/overview_total_deposited"
                style="@style/over_view_style"
                android:layout_weight="2"
                android:gravity="left"
                android:text="Total Invested:" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="" />

            <TextView
                android:id="@+id/overview_total_deposited_detail"
                style="@style/over_view_detail_style"
                android:layout_weight="2"
                android:gravity="right"
                android:text="0$"
                android:textIsSelectable="false" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="" />

            <Button
                android:id="@+id/overview_total_deposited_deposite"
                style="@style/header_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="?actionBarItemBackground"
                android:gravity="right"
                android:minHeight="32.0dip"
                android:minWidth="52.0dip"
                android:paddingRight="4.0dip"
                android:singleLine="true"
                android:text="Deposite/Withdraw >>" />
        </LinearLayout>

        <TextView
            android:id="@+id/overview_profit_header"
            style="@style/overview_header_label"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Profit Overview" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

            <TextView
                android:id="@+id/overview_current_profit"
                style="@style/over_view_style"
                android:layout_weight="2"
                android:text="Current Profit:" />

            <TextView
                android:id="@+id/overview_current_profit_value"
                style="@style/over_view_detail_style"
                android:layout_weight="3"
                android:gravity="right"
                android:text="0$" />

            <TextView
                android:id="@+id/overview_current_profit_percent"
                style="@style/over_view_detail_style"
                android:layout_weight="3"
                android:gravity="right"
                android:text="(0.0%)" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <TextView
            android:id="@+id/overview_forecast_header_label"
            style="@style/overview_header_label"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Forecast" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:weightSum="10" >

            <TextView
                style="@style/over_view_style"
                android:layout_weight="1"
                android:text="" />

            <TextView
                android:id="@+id/overview_expected_profit"
                style="@style/over_view_style"
                android:layout_weight="2"
                android:text="Expected Profit:" />

            <TextView
                android:id="@+id/overview_expected_profit_value"
                style="@style/over_view_detail_style"
                android:layout_weight="3"
                android:gravity="right"
                android:text="0$" />

            <TextView
                android:id="@+id/overview_expected_profit_percent"
                style="@style/over_view_detail_style"
                android:layout_weight="3"
                android:gravity="right"
                android:text="(0.0%)"
                android:textColor="@color/widget_green" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="" />

            <TextView
                style="@style/over_view_style"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="left"
                android:text="Stock" />

            <TextView
                style="@style/over_view_style"
                android:layout_weight="3"
                android:gravity="right"
                android:text="%" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/overview_profit_list"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:drawSelectorOnTop="false" >
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10" >

            <TextView
                style="@style/over_view_style"
                android:layout_weight="1"
                android:text="" />

            <TextView
                android:id="@+id/overview_losses_warning"
                style="@style/over_view_style"
                android:layout_weight="2"
                android:text="Losses Warning:" />

            <TextView
                android:id="@+id/overview_losses_warning_value"
                style="@style/over_view_detail_style"
                android:layout_weight="3"
                android:gravity="right"
                android:text="0$" />

            <TextView
                android:id="@+id/overview_losses_warning_percent"
                style="@style/over_view_detail_style"
                android:layout_weight="3"
                android:gravity="right"
                android:text="(0.0%)"
                android:textColor="@color/widget_red" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="" />

            <TextView
                style="@style/over_view_style"
                android:layout_weight="3"
                android:gravity="left"
                android:text="Stock" />

            <TextView
                style="@style/over_view_style"
                android:layout_weight="3"
                android:gravity="right"
                android:text="%" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/overview_losses_list"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:drawSelectorOnTop="false" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>